<h1>Edit Team</h1>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Player role</th>
      <th>Interests</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
        <tr>
        <td><%= user.name%></td>
        <td><%= user.location%></td>
        <td><%= user.position%></td>
        <td><%= user.interests%></td>
        <td class="d-flex">
            <% if user.team==@team%>
                <% if @team.uid!=user.id%>
                    <%= button_to "Remove", remove_team_member_path(@team,user), method: :delete, data: { turbo: false }, class:'btn btn-primary' %>
                <% else %>
                    Admin
                <% end %>
            <% else %>
                <% if user.team.present?%>
                    In another team
                <% else %>
                    <%= button_to "Add", add_team_member_path(@team,user), method: :post, data: { turbo: false }, class:"btn btn-primary" %>
                <% end %>
            <% end %>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Cancel", user_profile_path(current_user), class:"btn btn-primary"%>